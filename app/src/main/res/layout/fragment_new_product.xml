<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.NewProductFragment">

    <TextView
        android:id="@+id/textView_creat_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Crear Publicación"
        android:textColor="@color/Dark_blue_light"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/select_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView_creat_post">

        <ImageView
            android:id="@+id/imageview_1"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_image"
            app:layout_constraintTop_toBottomOf="@+id/textView_creat_post" />

        <ImageView
            android:id="@+id/imageview_2"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_image"
            app:layout_constraintTop_toBottomOf="@+id/textView_creat_post" />

        <ImageView
            android:id="@+id/imageview_3"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_image"
            app:layout_constraintTop_toBottomOf="@+id/textView_creat_post" />
    </LinearLayout>

    <TextView
        android:id="@+id/tittle_add_image"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="Elige fotos que visualice el producto a vender perfectamente"
        android:textColor="@color/Dark_blue_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_img" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField_title"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/Dark_blue"
        android:hint="Titulo"
        android:textColorHint="@color/Dark_blue"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/Dark_blue"
        app:hintTextColor="@color/Dark_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittle_add_image">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_title"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Dark_blue"
            android:textColorHint="@color/Dark_blue" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tittle_create_title"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="Ponle un titulo que sea llamativo para tu publicación"
        android:textColor="@color/Dark_blue_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textField_title" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField_description"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/Dark_blue"
        android:hint="Descripción"
        android:textColorHint="@color/Dark_blue"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/Dark_blue"
        app:hintTextColor="@color/Dark_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittle_create_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:textColor="@color/Dark_blue"
            android:textColorHint="@color/Dark_blue" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField_price"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/Dark_blue"
        android:hint="Precio"
        android:textColorHint="@color/Dark_blue"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/Dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textField_description">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_price"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Dark_blue"
            android:textColorHint="@color/Dark_blue" />
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_tags"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textField_price"
        app:layout_constraintStart_toStartOf="@+id/textField_price"
        app:layout_constraintTop_toBottomOf="@id/textField_price" />

    <Spinner
        android:id="@+id/spinner_status"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_tags"
        app:layout_constraintStart_toStartOf="@+id/spinner_tags"
        app:layout_constraintTop_toBottomOf="@id/spinner_tags" />

    <Button
        android:id="@+id/button_descartarPost"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@color/Dark_blue_light"
        android:text="Descartar"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_publicarPost"
        app:layout_constraintTop_toBottomOf="@id/spinner_status" />

    <Button
        android:id="@+id/btn_publicarPost"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@color/Dark_blue_light"
        android:text="Publicar"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_status" />

</androidx.constraintlayout.widget.ConstraintLayout>