<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.ProfileFragment">

    <include layout="@layout/action_bar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimage_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/avatar"
        app:civ_border_color="@color/Dark_blue"
        app:civ_border_width="5dp"
        app:civ_circle_background_color="@color/Dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>

    <LinearLayout
        android:id="@+id/textview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/circleimage_user"
        android:layout_marginStart="@dimen/Margin_top_50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_account_box_24"
            />

        <TextView
            android:id="@+id/textview_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textview_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textview_name"
        android:layout_marginStart="@dimen/Margin_top_50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_email_24"
            />

        <TextView
            android:id="@+id/textview_email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electronico"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textview_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textview_email"
        android:layout_marginStart="@dimen/Margin_top_50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_phone_24"
            />

        <TextView
            android:id="@+id/textview_phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+503 0000-0000"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_update_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar perfil"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:backgroundTint="@color/Dark_blue_light"
        app:layout_constraintStart_toStartOf="@id/btn_logout"
        app:layout_constraintBottom_toTopOf="@+id/btn_logout"
        app:layout_constraintEnd_toEndOf="@id/btn_logout"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesion"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginBottom="70dp"
        android:textStyle="bold"
        android:backgroundTint="@color/Dark_blue"
        app:layout_constraintStart_toStartOf="@id/btn_update_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_update_profile"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>